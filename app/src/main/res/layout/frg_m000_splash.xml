<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/d_30">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:src="@drawable/logo_main" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_minus_20"
        android:gravity="center_horizontal|top">

        <View
            android:layout_width="@dimen/d_15"
            android:layout_height="@dimen/d_3"
            android:layout_marginStart="@dimen/d_80"
            android:layout_marginTop="@dimen/d_10"
            android:layout_marginEnd="@dimen/d_5"
            android:background="@color/orange" />

        <TextView
            android:layout_width="@dimen/d_217"
            android:layout_height="wrap_content"
            android:text="@string/txt_splash"
            android:textColor="@color/black"
            android:textSize="@dimen/d_16" />
    </TableRow>

</LinearLayout>