<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:src="@drawable/logo_main" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_minus_20"
        android:gravity="center_horizontal|top">

        <View
            android:layout_width="@dimen/d_15"
            android:layout_height="@dimen/d_3"
            android:layout_marginStart="@dimen/d_80"
            android:layout_marginTop="@dimen/d_10"
            android:layout_marginEnd="@dimen/d_5"
            android:background="@color/orange" />

        <TextView
            android:layout_width="@dimen/d_217"
            android:layout_height="wrap_content"
            android:text="@string/txt_splash"
            android:textColor="@color/black"
            android:textSize="@dimen/d_16" />
    </TableRow>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_50"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_send_phone"
            android:textColor="@color/black"
            android:textSize="@dimen/d_20"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="@dimen/d_280"
            android:layout_height="wrap_content"
            android:padding="@dimen/d_10"
            android:paddingStart="@dimen/d_20"
            android:layout_marginTop="@dimen/d_20"
            android:background="@drawable/bg_login_edt"
            android:hint="@string/txt_phone"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/lightOrange" />
            <TextView
                android:id="@+id/tv_take_pass"
                android:layout_width="@dimen/d_180"
                android:layout_height="@dimen/d_50"
                android:layout_marginStart="@dimen/d_10"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:text="@string/txt_send_phone"
                android:textColor="@color/white"
                android:textSize="@dimen/d_20"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/d_15"
                android:layout_gravity="end"/>
    </LinearLayout>
</LinearLayout>